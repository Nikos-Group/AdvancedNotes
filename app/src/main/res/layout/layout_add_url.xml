<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_web_link"
        app:tint="?attr/colorOnSecondary" />

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/dialog_image"
        android:layout_alignBottom="@id/dialog_image"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/dialog_image"
        android:fontFamily="@font/ubuntu_bold"
        android:gravity="center_vertical"
        android:text="@string/add_url"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/transparent"
        android:fontFamily="@font/ubuntu_regular"
        android:hint="@string/enter_url"
        android:paddingVertical="8dp"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ubuntu_medium"
        android:padding="8dp"
        android:text="@string/add_url"
        android:background="@drawable/selector_add_url"
        android:textColor="@color/red"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/add"
        android:fontFamily="@font/ubuntu_medium"
        android:padding="8dp"
        android:text="@string/cancel"
        android:background="@drawable/selector_cancel"
        android:textColor="@color/blue"
        android:textSize="16sp" />
</RelativeLayout>