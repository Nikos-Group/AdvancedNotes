<resources>
    <style name="Theme.AdvancedNotes" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/azure</item>
        <item name="colorOnPrimary">@color/grey_8</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_2</item>
        <item name="colorSecondaryVariant">@color/dark_grey</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarColor">?attr/colorSecondary</item>
        <item name="android:colorBackground">?attr/colorPrimary</item>
    </style>
</resources>